<div class="row mt-3 mb-3">
    @*ОБЛАСТЬ. Статистика отзывов *@
    <div class="col-md-3">
        @await Html.PartialAsync("_Partial.GamePage.Reviews.Stats")
    </div>
    @*ОБЛАСТЬ. Отзывы *@
    <div class="col-md-9 singlegame-area mb-3">

        @if(User.Identity.IsAuthenticated is true)
        {
            @*ОБЛАСТЬ. Написать отзыв *@
            <div class="row">
                <form>
                    <div class="form-group">
                        <textarea id="rev" class="form-control w-100" rows="4" placeholder="Оставьте свой отзыв"></textarea>
                    </div>
                    <div class="form-group d-flex justify-content-end">
                        <button type="button" class="btn btn-lg btn-outline-primary">Отправить</button>
                    </div>
                </form>
            </div>
        }
      
        
        @*ОБЛАСТЬ. Сами отзывы *@
        <div class="row mt-5">
            <div class="js-reviews">
                @*Врмеменно - потом удалить*@
                @await Html.PartialAsync("_Partial.GamePage.Reviews") 
            </div>
            <div class="mt-3 d-flex justify-content-center">
                <button type="button" class="btn btn-primary">Загрузить ещё</button>
            </div>
         
        </div>

    </div>
</div>