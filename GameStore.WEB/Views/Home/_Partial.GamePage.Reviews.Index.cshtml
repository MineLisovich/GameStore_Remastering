<div class="row mt-3 mb-3">
  
    
    @*ОБЛАСТЬ. Статистика отзывов *@
    <div class="col-md-3 js-reviewStats">
      
    </div>
  
    
    @*ОБЛАСТЬ. Отзывы *@
    <div class="col-md-9 singlegame-area mb-3">

        @if(User.Identity.IsAuthenticated is true)
        {
            @*ОБЛАСТЬ. Написать отзыв *@
            <div class="row">
                <form>
                    <div class="form-group">
                        <textarea id="js-review" class="form-control w-100" rows="4" placeholder="Оставьте свой отзыв"></textarea>
                    </div>
                    <div class="form-group d-flex justify-content-end">
                        <button id="js-sendReviewBtn" type="button" class="btn btn-lg btn-outline-primary">Отправить</button>
                    </div>
                </form>
            </div>
        }
      
        
        @*ОБЛАСТЬ. Сами отзывы *@
        <div class="row mt-5">
            <div id="js-reviewsArea">
             
            </div>
            @await Html.PartialAsync("_Parial.Action.Loading")
            <div class="mt-3 d-flex justify-content-center">
                <button id="loadMoreReviewBtn" type="button" class="btn btn-primary">Загрузить ещё</button>
            </div>
         
        </div>

    </div>
</div>